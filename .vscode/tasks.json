{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üîß Setup Virtual Environment",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "venv",
        ".venv"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/server"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "powershell.exe",
            "args": [
              "-NoProfile",
              "-ExecutionPolicy",
              "Bypass",
              "-Command"
            ]
          }
        }
      }
    },
    {
      "label": "üì• Setup & Install Dependencies",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/setup_venv.ps1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "üîç Verify Server Build",
      "type": "shell",
      "command": "${workspaceFolder}/apps/server/.venv/Scripts/python.exe",
      "args": [
        "${workspaceFolder}/apps/server/build.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/server",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "üß™ Run All Tests",
      "type": "shell",
      "command": "${workspaceFolder}/apps/server/.venv/Scripts/python.exe",
      "args": [
        "-m",
        "pytest",
        "../../test/server",
        "-v",
        "--tb=long",
        "--showlocals",
        "--durations=10"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/server",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "ENCRYPTION_KEY": "dGVzdF9lbmNyeXB0aW9uX2tleV8xMjM0NTY3ODkwMTIzNDU2Nzg=",
          "DATABASE_URL": "sqlite:///:memory:",
          "ENVIRONMENT": "test"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "group": "test"
    },
    {
      "label": "üß™ Run Tests with Coverage",
      "type": "shell",
      "command": "${workspaceFolder}/apps/server/.venv/Scripts/python.exe",
      "args": [
        "-m",
        "pytest",
        "../../test/server",
        "-v",
        "--tb=long",
        "--showlocals",
        "--durations=10",
        "--cov=apps/server",
        "--cov-report=term-missing",
        "--cov-report=html"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/server",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "ENCRYPTION_KEY": "dGVzdF9lbmNyeXB0aW9uX2tleV8xMjM0NTY3ODkwMTIzNDU2Nzg=",
          "DATABASE_URL": "sqlite:///:memory:",
          "ENVIRONMENT": "test"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "group": "test"
    },
    {
      "label": "‚úÖ Build & Test (Pre-Commit)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "üîç Verify Server Build",
        "üß™ Run All Tests"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "üì¶ Check Dependencies",
      "type": "shell",
      "command": "${workspaceFolder}/apps/server/.venv/Scripts/pip.exe",
      "args": [
        "check"
      ],
      "options": {
        "cwd": "${workspaceFolder}/apps/server"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}

